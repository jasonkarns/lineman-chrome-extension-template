{
  "manifest_version": 2,
  "name": "<%= pkg.name %>",
  "version": "<%= pkg.version %>",
  "description": "<%= pkg.description %>",

  "browser_action": {
  },

  // http://developer.chrome.com/extensions/background_pages.html
  "background": {
    // Use only 'scripts' or 'page', not both:
    // "page": "<%= files.background.pages.generated %>"
    "scripts": [ "<%= files.background.js.concatenated %>" ]
  }
}
